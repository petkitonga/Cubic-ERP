<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
<div class="container-fluid body-content">
    <div class="row">
        <div class="col-md-2" id="menu-holder">
            <br/>
            <div class="inner-addon right-addon" id="search-box">
                <i class="glyphicon glyphicon-search"></i>
                <input id="search-input" class="form-control input-sm active" autofocus="autofocus"></input>
            </div>
            <br/>
            <div id="js-tree">

                <ul>
                    <li>Finance
                        <ul>
                            <li>Tasks</li>
                            <li>Setup & Maintenance
                                <ul>
                                    <li data-jstree='{"type":"leaf"}'><a href="@Url.Action("Index","AccountMasters")">Account Masters</a></li>
                                    <li data-jstree='{"type":"leaf"}'><a href="@Url.Action("Index","Accounts")">Chart of Accounts</a></li>
                                    <li data-jstree='{"type":"leaf"}'><a href="@Url.Action("Index","Currencies")">Currency Management</a></li>
                                    <li data-jstree='{"type":"leaf"}'><a href="@Url.Action("Index","BankAccounts")">Bank Accounts</a></li>
                                    <li data-jstree='{"type":"leaf"}'><a href="@Url.Action("Index","AgeingSlabs")">Ageing Slabs</a></li>
                                    <li data-jstree='{"type":"leaf"}'><a href="@Url.Action("Index","CashFlowHeadings")">Cash Flow Headings</a></li>
                                    <li data-jstree='{"type":"leaf"}'><a href="@Url.Action("Index","CashFlowSetup")">Cash Flow Setups</a></li>
                                    <li data-jstree='{"type":"leaf"}'><a href="@Url.Action("Index","CostCenters")">Cost Centers</a></li>
                                    <li data-jstree='{"type":"leaf"}'><a href="@Url.Action("Index","CardTypes")">Card Types</a></li>
                                    <li data-jstree='{"type":"leaf"}'><a href="@Url.Action("Index","PaymentCards")">Payment Cards</a></li>
                                </ul>
                            </li>
                            <li>Reports</li>
                        </ul>

                    </li>
                    <li>Inventory</li>
                    <li>Purchases</li>
                    <li>Sales</li>
                </ul>
            </div>
        </div>
        <div class="col-md-10">
            @RenderBody()
        </div>
    </div>
    
    <hr/>
    
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
</div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jstree")
    @RenderSection("scripts", required: false)
</body>
</html>
